CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

.c.o:
	${CC} -Wall -Werror -Wextra -pedantic -c -o $@ $<

clean:
	${RM} -f *~ ${NAME}

oclean:
	${RM} -f ${OBJ}

fclean: clean oclean

re: oclean all
